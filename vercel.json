{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "api/index.py"
        }
    ],
    "env": {
        "FLASK_ENV": "production",
        "PYTHONPATH": ".",
        "DATABASE_URL": "sqlite:///cabinet_medical.db"
    },
    "buildCommand": "pip install -r requirements.txt",
    "outputDirectory": ".",
    "public": true,
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/api/index.py"
        }
    ]
}
